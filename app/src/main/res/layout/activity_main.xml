<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDisplay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to he Carpenter App" />

        <EditText
            android:id="@+id/etInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="text"
            android:text="Enter number of Hour for the Job" />

        <CheckBox
            android:id="@+id/cbNum1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wood" />

        <CheckBox
            android:id="@+id/cbNum2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nails" />

        <CheckBox
            android:id="@+id/cbNum3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hinges" />

        <CheckBox
            android:id="@+id/cbNum4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Glue" />

        <Button
            android:id="@+id/btnCalc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estimate Cost" />

        <RadioGroup
            android:id="@+id/rbGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rbNum1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="InstallDoor" />

            <RadioButton
                android:id="@+id/rbNum2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BuildShelf" />

            <RadioButton
                android:id="@+id/rbNum3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AssembleFurniture" />

            <RadioButton
                android:id="@+id/rbNum4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flooring" />

            <TextView
                android:id="@+id/tvDisplay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Final Cost =" />

        </RadioGroup>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>